<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        app:layout_constraintCircleRadius="0dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/blackStunt"

        android:id="@+id/skills_Cardview">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/top_white_ligne"
    >

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="nom du skills"
                  android:textColor="@color/whiteStunt"
                  android:textSize="24dp"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toTopOf="@id/skills_difficulty"
                  android:id="@+id/skills_name"


        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="skills difficulty"
                  android:textColor="@color/greyStunt"
                  android:textSize="16dp"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/skills_name"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:id="@+id/skills_difficulty"

        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="points"
                  android:textColor="@color/greyStunt"
                  android:textSize="16dp"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/skills_name"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:id="@+id/points_usless"

        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="30"
                  android:textColor="@color/greyStunt"
                  android:textSize="16dp"
                  app:layout_constraintRight_toLeftOf="@id/points_usless"
                  app:layout_constraintTop_toBottomOf="@+id/skills_name"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:id="@+id/number_points_skills"
                  android:layout_marginRight="8dp"

        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>