<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        app:layout_constraintCircleRadius="0dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/blackStunt"
android:id="@+id/youtube_Cardview">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9dp"
            android:layout_marginBottom="5dp">

        <ImageView
                android:id="@+id/imageYoutube"
                android:layout_width="180dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/imageYoutube"
        />
        <TextView
                android:id="@+id/youtubeTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="mettre le ttre ici"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/imageYoutube"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>